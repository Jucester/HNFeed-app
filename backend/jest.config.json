{
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
        "/node_modules"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "test/coverage",
    "testEnvironment": "node",
    "verbose": true,
    "coverageThreshold": {
        "global": {
            
          "branches": 30,
          "functions": 30,
          "lines": 30,
          "statements": 30
        }
    }
  }